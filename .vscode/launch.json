    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "CodeLLDB Launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                // add the directory where our target was built to the PATHs
                // it gets resolved by CMake Tools:
                "PATH": "$PATH:${command:cmake.launchTargetDirectory}"
            },
        }
    ]
}